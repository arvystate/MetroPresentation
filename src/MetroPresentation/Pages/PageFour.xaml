                    <TextBlock Grid.Row="8" Text="• Lorem ipsum dolor sit amet." FontSize="46" FontFamily="../Font/SegoeWP-Light.ttf#Segoe WP Light" />
                </Grid>
            </Viewbox>
        </Grid>

        <Grid Name="Intro" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="#FFD1284D" Opacity="0">
            <TextBlock Text="Page 4" FontSize="62" FontFamily="../Font/SegoeWP-Light.ttf#Segoe WP Light" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Grid>
        
    </Grid>
